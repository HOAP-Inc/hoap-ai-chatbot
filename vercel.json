{
  "version": 2,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Content-Security-Policy", "value": "frame-ancestors 'self' https://hoap-inc.jp https://www.hoap-inc.jp" }
      ]
    }
  ],
  "functions": {
    "api/**/*.{js,ts}": { "runtime": "nodejs20.x" }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },     // ← 先頭に追加（APIは必ず関数に流す）
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }      // ← SPA用キャッチオールは最後に
  ]
}
