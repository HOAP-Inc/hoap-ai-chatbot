{
  "version": 2,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors 'self' https://hoap-inc.jp https://www.hoap-inc.jp"
        }
      ]
    }
  ],
  "functions": {
    "api/**/*.{js,ts}": { "runtime": "nodejs20.x" }
  },
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
